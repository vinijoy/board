<!DOCTYPE html>
<html lang="ko">
  <head>
    <%- include('./layouts/head') %>
    <title><%= board_name.b_name %> > 글쓰기</title>
  </head>
  <body>
    <%- include('./layouts/lnb') %>

    <main>
      <h1>글쓰기</h1>
      <br/>
        <p>제목을 입력하세요.</p>
        <br/>
        <input
        type="text"
        id="bc_title"
        placeholder="제목"/>
        <br/>

        <p>내용을 입력하세요.</p>
        <br/>
        <textarea
        id="bc_description"
        placeholder="내용"></textarea>
        <br/>

        <button
        id="create_post"
        onclick="writePost()">
        등록
        </button>
    </main>
    <br/>

    <%- include('./layouts/footer') %>

    <script>
      function writePost() {
        const data = {
          bc_title: $('#bc_title').val().trim(),
          bc_description: $('#bc_description').val().trim(),
          b_no: <%= b_no %>,
          u_no: <%= u_no %>
        };

        if (!data.bc_title) {
          alert('제목을 입력해주세요.');
          return;
        }

        if (!data.bc_description) {
          alert('내용을 입력해주세요.');
          return;
        }

        apiPost('/api/post/create-post', data, function (data) {
          if (data.result_code === 'SUCCESS') {
            location.href = '/board?b_id=<%= b_id %>';
          }
        }, function (error) {
          if (error) {
            alert('오류가 발생했습니다.');
          }
        });
      }
    </script>
  </body>
</html>